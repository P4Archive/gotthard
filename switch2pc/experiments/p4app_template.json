{
  "program": "p4src/twopc_router.p4",
  "language": "p4-16",
  "targets": {
    "default": {
      "use": "multiswitch",
      "links": [["h1", "s1"], ["h2", "s1"], ["h3", "s1"], ["h99", "s1"]],
      "hosts": {
        "h99": {
            "cmd": "./load_generator.py -c %clients% -d %duration% -l /tmp/p4app_logs/client.log h1:9000",
            "wait": true
        },
        "h1": {
            "cmd": "./coordinator.py -p 9000 -t %threads% h2:8000 h3:8000",
            "startup_sleep": 0.1,
            "latency": "%latency%ms",
            "wait": false
        },
        "h2": {
            "cmd": "./participant.py -p 8000 -t %threads%",
            "startup_sleep": 0.1,
            "wait": false
        },
        "h3": {
            "cmd": "./participant.py -p 8000 -t %threads%",
            "startup_sleep": 0.1,
            "wait": false
        }
      },
      "switches": {
          "s1": {
              "entries": "commands.txt"
          }
      },
      "parameters": {
          "latency": 5,
          "duration": 30,
          "threads": 4,
          "clients": 4
      },
      "after": {
         "cmd": [
            "rm -f /tmp/p4app_logs/p4s.s1.log"
         ]
      },
      "bmv2_log": false,
      "pcap_dump": false,
      "cli": false
    }
  }
}
